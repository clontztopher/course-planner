<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Instructor.InstructorEditActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/instructorEditMainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingTop="32dp"
        android:paddingRight="32dp">

        <TextView
            android:id="@+id/instructorNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Name" />

        <EditText
            android:id="@+id/instructorNameField"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="Instructor Name"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Email" />

        <EditText
            android:id="@+id/instructorEmailField"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="Instructor Email"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Phone" />

        <EditText
            android:id="@+id/instructorPhoneField"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="Instructor Phone"
            android:inputType="phone" />

        <Button
            android:id="@+id/saveInstructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#4CAF50"
            android:onClick="handleSaveInstructorClick"
            android:text="Save"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>