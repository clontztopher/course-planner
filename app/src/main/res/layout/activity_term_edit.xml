<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Term.TermEditActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingRight="32dp">

        <TextView
            android:id="@+id/termNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="New Term Name" />

        <EditText
            android:id="@+id/termNameField"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Term Name"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Start Date" />

        <EditText
            android:id="@+id/termStartDateField"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:ems="10"
            android:hint="Start Date"
            android:inputType="date"
            android:tag="startDateField" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="End Date" />

        <EditText
            android:id="@+id/termEndDateField"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:ems="10"
            android:hint="End Date"
            android:inputType="date"
            android:tag="endDateField" />

        <Button
            android:id="@+id/saveNewTerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#4CAF50"
            android:onClick="handleSaveTermClick"
            android:text="Save"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>